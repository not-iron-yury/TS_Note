  "compilerOptions": {
    "target": "ES2024",
    "removeComments": false,
    "outDir": "src/javascript",
    "sourceMap": false,
    "noEmitOnError": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false
  },
  "include": ["src/typescript/*.ts"],
  "exclude": ["node_modules"]
}

